<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LoseFragment">

        <ImageView
            android:id="@+id/victoryImage"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"

            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic[13]" />

        <Button
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="32dp"
            android:text="Play again"

            app:layout_constraintEnd_toEndOf="@+id/victoryImage"
            app:layout_constraintStart_toStartOf="@+id/victoryImage"
            app:layout_constraintTop_toBottomOf="@+id/victoryImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


